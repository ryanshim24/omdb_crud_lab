<html lang="en">
  <head>
    <meta charset="utf-8">
    
    <title>Detailed Page</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

  
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
  
  </head>

  <body>
    <div class="sideBar"> 
      <div class="logoContainer">
        <div class="logo">
          M
        </div>
        <div class="appName">
          Movie Searcher
        </div>
      </div>
      <div class="linkContainer">
        <ul>
          <a href="/"><li>Home</li></a>
          <a href="/interested"><li>Favorites</li></a>
          <a href="/contact"><li>Contact Me</li></a>
          <a href="/about"><li>About Me</li></a>
        </ul>
      </div>
      <footer>
        Â© Ryan's Awesome 2014
      </footer>
    </div>


    <div class="content">
      <div class="searchBar">

        <form action="/search" method="GET">
          <input type="text" name="movieTitle" class="search" placeholder="Search for other Movie?"> <!-- Added searchTerm value -->
          <input type="submit" class="submit">
        </form>

      </div>
      
      <div class="results">
        <div class="detailContainer">
          <!-- If Poster is Not Avaliable don't put out image -->
          <% if (detailList.Poster != 'N/A') { %> ] 
              <img src="<%= detailList.Poster %>" alt="" style="float: right; height: 50%;">
          <% } %>
          <h1><%= detailList.Title%></h1>
          <h3>Year: <%= detailList.Year %></h3>
          <br>
          <p>Rated: <%= detailList.Rated%></p>
          <p>Released: <%= detailList.Released%></p>
          <p>Runtime: <%= detailList.Runtime%></p>
          <p>Genre: <%= detailList.Genre%></p>
          <p>Director: <%= detailList.Director%></p>
          <p>Writer: <%= detailList.Writer%></p>
          <p>Actors: <%= detailList.Actors%></p>
          <p>Plot: <%= detailList.Plot%></p>
          <p>Language: <%= detailList.Language%></p>
          <p>Country: <%= detailList.Country%></p>
          <p>Awards: <%= detailList.Awards%></p>
          <p>Imdb Rating: <%= detailList.imdbRating%></p>
          <!-- Submit button determines if I'm interested -->
          <!-- If I am I take the value of the movie title so I can get it from the app.post -->
          <form action="/interested" method="POST">
            <input name="movie[title]" value="<%= detailList.Title%>" type="hidden">
           <button type="submit" class="btn btn-primary">I'm Interested!</button>
          </form>
        </div>
      </div>
    </div>
        

</body>
</html>