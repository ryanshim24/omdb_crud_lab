<html lang="en">
  <head>
    <meta charset="utf-8">
    
    <title>Interests Page</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

  
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
  
  </head>

  <body>
    <div class="sideBar"> 
      <div class="logoContainer">
        <div class="logo">
          M
        </div>
        <div class="appName">
          Movie Searcher
        </div>
      </div>
      <div class="linkContainer">
        <ul>
          <a href="/"><li>Home</li></a>
          <a href="/interested"><li>Favorites</li></a>
          <a href="/contact"><li>Contact Me</li></a>
          <a href="/about"><li>About Me</li></a>
        </ul>
      </div>
      <footer>
        Â© Ryan's Awesome 2014
      </footer>
    </div>


    <div class="content">
      <div class="searchBar">

        <form action="/search" method="GET">
          <input type="text" name="movieTitle" placeholder="Search for other movie?" class="search"> <!-- Added searchTerm value -->
          <input type="submit" class="submit">
        </form>
    </div>
      


      <div class="results">
      <% if (interestMovies.length === 0){ %>
        <div class="noMovies text-center">
          <h1>No Movies in this directory just yet!</h1>
          <h3>Search for some movies!!!</h3>
        </div>
      <% } else { %>
        <h1>Movies I'm Interested In!</h1>
        <ul>
          <% interestMovies.forEach(function(list){ %>
            <li class="movie cf">
              <div class="title"><%=list.title%></div>
              <form action="/interested/<%= list.id %>?_method=delete" method="post">
                <button type="submit" class="btn btn-primary pull-right">Delete?</button>
              </form>
            </li>
          <% }); %>
        <% } %>
        </ul>
      </div>
    </div>
  
</body>
</html>