            </ul>
         </div>
        </div>
    </div>
  <div class="container favorites">
    <h1>Movies I'm Interested in</h1>
    <hr>
    <% if (interestMovies.length === 0){ %>
      <p>No movies</p>

    <% } else { %>

      <% interestMovies.forEach(function(film){ %>
        <h2><%=film.title%></h2>
        <form action="/interested/<%= film.id %>?_method=delete" method="post">
          <button type="submit" class="btn btn-primary">Delete?</button>
        </form>
        <br>
      <% }); %>
    <% } %>
  </div>
